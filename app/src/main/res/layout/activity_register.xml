<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yin.spellchecker.main.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:singleLine="true"
        android:numeric="integer"
        android:background="@drawable/shape_edit_corner"
        android:paddingLeft="5dp"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:hint="@string/reg_password_hint"
        />
    <TextView
        android:id="@+id/reg_submit"
        android:text="@string/reg_sign_in"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_btn_corner"
        android:gravity="center"
        android:textSize="30sp"
        />

</LinearLayout>
